<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qiugong.artisticprobes">

    <application android:name=".x02.MyApplication">
        <activity
            android:name=".x01.MainActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/app_name"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".x01.SecondActivity"
            android:process=":remote"/>

        <activity android:name=".x01.ThreeActivity"
            android:process="com.qiugong.book.remote"/>

        <activity
            android:name=".x01.FourActivity"
            android:launchMode="singleInstance" />
    </application>
</manifest>
